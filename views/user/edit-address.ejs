<style>
    .form-group {
        margin-bottom: 2rem;

    }

    .form-group {
        margin-bottom: 2rem;

    }

    @media (min-width: 576px) {
    .card {
      margin: 2rem;
    }
  }

  /* Medium devices (tablets, 768px and up) */
  @media (min-width: 768px) {
    .card {
      margin: 5rem;
    }
  }

  /* Large devices (desktops, 992px and up) */
  @media (min-width: 992px) {
    .card {
      margin-top: 5rem;
      margin-right: 10rem;
      margin-bottom: 20rem;
      margin-left: 5rem;
    }
  } 
    
</style>



<div class="container" style="width: auto;" >
    <div class="row justify-content-center">
        <div class=" col-lg-8 col-md-10">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Edit your address here</h5>
                </div>
                <div class="card-body">
                    <form action="/edit-address?address=<%= JSON.stringify(address) %>" method="post">
                        <div class="form-group">
                            <input type="text" required="" value="<%=address.name %>" name="name" placeholder=" Name *">
                        </div>

                        <div class="form-group">
                            <input type="text" name="address" value="<%=address.address %>" required=""
                                placeholder="Office/House No *">
                        </div>

                        <div class="form-group">
                            <input required="" type="text" value="<%=address.city %>" name="city"
                                placeholder="City / Town *">
                        </div>

                        <div class="form-group">
                            <input required="" type="text" value="<%=address.district %>" name="district"
                                placeholder="District *">
                        </div>

                        <div class="form-group">
                            <input required="" type="text" value="<%=address.state %>" name="state"
                                placeholder="state *">
                        </div>

                        <div class="form-group">
                            <input required="" type="text" value="<%=address.zipcode %>" name="zipcode"
                                placeholder="Postcode / ZIP *">
                        </div>
                        <div class="form-group">
                            <input required="" type="text" value="<%=address.phone %>" id="phone" name="phone"
                                placeholder="Phone *" onkeyup="return validateMobile()">
                            <span id="phone-error" style="color: red; font-size: 12px; margin-top: 5px;"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"> Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    function validateMobile() {
        const regMobile = /^[1-9]{1}\d{9}$/
        const mobile = document.getElementById('phone').value
        if (!regMobile.test(mobile)) {
            document.getElementById('phone-error').innerHTML = 'Enter Valid Mobile No'
            return false
        } else {
            document.getElementById('phone-error').innerHTML = ''
            return true
        }

    }

    // eliminate string in number input field
    const mobileInput = document.getElementById('phone');
    mobileInput.addEventListener('input', event => {
        const input = event.target.value;
        const numericInput = input.replace(/[^0-9]/g, '');
        event.target.value = numericInput;
    })


</script>